@model IEnumerable<MVCTestAppCommon.TestAppDal.Models.Invoice>
@{
    ViewBag.Title = "Invoices";
}

<h1>Invoice management</h1>

<div class="row">
    <div class="col-md-12">
        @Html.ActionLink("Create invoice", "Create", null, new { @class = "btn btn-success" })
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">@Html.DisplayNameFor(model => model.InvoiceID)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.IsPaidFormatted)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.BillerFullName)</th>
                    <th scope="col">@Html.DisplayNameFor(model => model.Email)</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var invoice in Model)
                {
                    <tr>
                        <th scope="row">@invoice.InvoiceID</th>
                        <td>@invoice.IsPaidFormatted</td>
                        <td>@invoice.BillerFullName</td>
                        <td>@invoice.Email</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { @invoiceID = invoice.InvoiceID}, new { @class = "btn-sm btn-primary" })
                            @Html.ActionLink("X", "Delete",  new { @invoiceID = invoice.InvoiceID}, new { @class = "btn-sm btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
